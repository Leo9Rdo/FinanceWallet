<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.financewallet.presentation.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_assets"
        android:name="com.example.financewallet.presentation.assetList.AssetListFragment"
        android:label="Assets List"
        tools:layout="@layout/fragment_asset_list" />
    <fragment
        android:id="@+id/navigation_portfolio"
        android:name="com.example.financewallet.presentation.portfolio.PortfolioListFragment"
        android:label="Portfolio List"
        tools:layout="@layout/fragment_portfolio_list" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.financewallet.presentation.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_navigation_settings_to_navigation_string_selector_bottom_sheet"
            app:destination="@id/navigation_string_selector_bottom_sheet" />
    </fragment>
    <dialog
        android:id="@+id/navigation_string_selector_bottom_sheet"
        android:name="com.example.financewallet.presentation.settings.StringSelectorBottomSheetFragment"
        android:label="String Selector"
        tools:layout="@layout/fragment_string_selector_bottom_sheet" />
</navigation>
